{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalEnv": ["SERVICE_NAME", "SERVICE_PORT", "ENGAGEMENT_GRPC_ADDRESS", "ENGAGEMENT_GRPC_PORT","CASSANDRA_CONTACT_POINTS","CASSANDRA_PORT","CASSANDRA_KEYSPACE","CASSANDRA_USER","CASSANDRA_PASSWORD","CASSANDRA_DATACENTER"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
