{
  "name": "@repo/grpc-engagement",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./proto": "./proto/engagement.proto"
  },
  "scripts": {
    "build": "echo 'no-op'",
    "generate": "proto-loader-gen-types --keepCase --longs=String --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js -O src/generated proto/engagement.proto && node scripts/fix-generated-imports.mjs",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.4",
    "@grpc/proto-loader": "^0.7.13"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "@grpc/grpc-js": "^1.12.0"
  }
}
